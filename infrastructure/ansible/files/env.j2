# infrastructure/ansible/files/env.j2
# CocktailDB Environment Configuration
# Generated by Ansible - do not edit manually

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME={{ db_name | default('cocktaildb') }}
DB_USER={{ db_user | default('cocktaildb') }}
DB_PASSWORD={{ db_password }}

# AWS Configuration
AWS_REGION={{ aws_region | default('us-east-1') }}
ANALYTICS_BUCKET={{ analytics_bucket }}
BACKUP_BUCKET={{ backup_bucket }}

# Cognito Authentication
USER_POOL_ID={{ user_pool_id }}
APP_CLIENT_ID={{ app_client_id }}

# Application Settings
ENVIRONMENT={{ app_env | default('production') }}
LOG_LEVEL={{ log_level | default('INFO') }}
